{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}